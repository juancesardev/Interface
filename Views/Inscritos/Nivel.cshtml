@model FuncionesLinq.Models.Inscritos

@{
    ViewData["Title"] = "Nivel";
}

<h1>Nivel</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                Nivel
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Addby)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Idalumno)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Idcurso)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FechaAdd)
            </th>
            
        </tr>
    </thead>
    <tbody>
@if(ViewBag.listaInscritos != null){

    @foreach (var item in ViewBag.listaInscritos) {
